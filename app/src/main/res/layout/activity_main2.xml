<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nota1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="-2dp">

    <LinearLayout
        android:layout_width="234dp"
        android:layout_height="427dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/viewNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primeira nota" />

        <EditText
            android:id="@+id/editTextNota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/viewNota1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segunda nota" />

        <EditText
            android:id="@+id/editTextNota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/viewNota3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terceira nota" />

        <EditText
            android:id="@+id/editTextNota3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/viewNota4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quarta nota" />

        <EditText
            android:id="@+id/editTextNota4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnMedia"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:text="ver media" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>